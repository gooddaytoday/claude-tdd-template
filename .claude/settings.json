      "Edit(.env.example)",
      "Edit(.gitignore)",
      "Edit(.dockerignore)",
      "Edit(CLAUDE.md)",
      "Edit(README.md)",
      "Write(src/**)",
      "Write(.claude/**)",
      "Write(.taskmaster/**)",
      "Write(dist/**)",
      "Write(tests/**)",
      "Write(docker/**)",
