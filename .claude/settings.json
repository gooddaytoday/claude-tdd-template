      "Bash(npx tsc:*)",
      "Bash(npx ts-node:*)",
      "Bash(git status)",
      "Bash(git diff:*)",
      "Bash(git log:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git branch:*)",
      "Bash(git checkout:*)",
      "Bash(git pull:*)",
      "Bash(tsc:*)",
      "Bash(ts-node:*)",
      "Bash(docker build:*)",
