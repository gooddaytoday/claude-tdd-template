    "ask": [
      "Bash(git push:*)",
      "Bash(git rebase:*)",
      "Bash(git merge:*)",
      "Bash(git reset:*)",
      "Edit(package-lock.json)",
      "Write(package.json)",
      "Write(package-lock.json)",
      "Write(tsconfig.json)",
      "Bash(npm publish:*)",
      "Bash(docker-compose rm:*)"
